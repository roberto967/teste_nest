{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.test.json"
      }
    ]
  },
  "testTimeout": 15000,
  "moduleNameMapper": {
    "^db-config/(.*)$": "<rootDir>/src/db-config/$1"
  }
}
